# Django Settings
# IMPORTANT: Generate a new SECRET_KEY for production!
# Run: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here-CHANGE-THIS
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# Để dùng PostgreSQL, đổi USE_POSTGRES=True
USE_POSTGRES=False

# PostgreSQL Settings (chỉ cần khi USE_POSTGRES=True)
DB_NAME=travel_db
DB_USER=postgres
DB_PASSWORD=your-db-password-here
DB_HOST=localhost
DB_PORT=5432

# Database Connection Pooling
# CONN_MAX_AGE: Thời gian giữ connection (seconds)
# 0 = Tắt pooling (mở connection mới mỗi request)
# 60-600 = Recommended (1-10 minutes)
# None = Persistent connections (không đóng)
DB_CONN_MAX_AGE=600

# AI/ML Settings
AI_SENTIMENT_ENABLED=True

# Security Settings (Production)
# IMPORTANT: Set DEBUG=False in production!
# DEBUG=False

# HSTS Settings (Production with HTTPS)
# Uncomment these when deploying to production with HTTPS
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True
# SECURE_HSTS_PRELOAD=True
